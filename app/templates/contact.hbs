<h1>Contact Page</h1>

<div class="row">
  <div class="col-md-6">
    {{#if responseMessage}}
      <div class="alert alert-message">
        <h4>Thank you! Your message is sent.</h4>
        <p>To: {{model.email}}</p>
        <p>Message: {{model.message}}</p>
        <p>Reference ID: {{model.id}}</p>
      </div>
    {{else}}
      <div class="form-group has-feedback {{if model.isValidEmail 'has-success'}}">
        <label>* Email address:</label>
        {{input type="email" class="form-control" placeholder="Your email address" value=model.email autofocus="autofocus"}}

        {{#if model.isValidEmail}}
          <span class="glyphicon glyphicon-ok form-control-feedback"></span>
        {{/if}}
      </div>

      <div class="form-group has-feedback {{if model.isMessageEnoughLong 'has-success'}}">
        <label>* Message:</label>
        {{textarea class="form-control" placeholder="Your Message. (At least 5 characters long)" rows="5" value=model.message}}

        {{#if model.isMessageEnoughLong }}
          <span class="glyphicon glyphicon-ok form-control-feedback"></span>
        {{/if}}
      </div>

      <button class="btn btn-primary btn-lg btn-block" {{action 'sendMessage' model}} disabled="{{model.isNotValid}}">Send</button>
    {{/if}}
  </div><!-- col-md-6 -->
</div><!-- row -->

{{outlet}}
